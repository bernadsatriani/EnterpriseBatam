<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_back_new"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/grey_s"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_55">

        <RelativeLayout
            android:id="@+id/layout_permohonan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/permohonan_icon"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_permohonan" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_permohonan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Permohonan"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_dalamsurat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/dalam_proses"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_dalamsurat" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_dalamsurat"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Dalam Proses"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_riwayat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/riwayat_icon"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_riwayat" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_riwayat"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Riwayat"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/folder_icon"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_folder" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_folder"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Folder"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:id="@+id/frame_content1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>