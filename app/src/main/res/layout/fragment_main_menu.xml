<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_marginTop="@dimen/space_40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45">

        <ImageView
            android:src="@drawable/logo_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_marginTop="@dimen/space_40"
        android:paddingEnd="80dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingStart="80dp" ></android.support.v4.view.ViewPager>

    <LinearLayout
        android:background="@drawable/btn_shape_all_grey_dark"
        android:layout_marginLeft="@dimen/space_70"
        android:layout_marginRight="@dimen/space_70"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45">

        <RelativeLayout
            android:id="@+id/layout1"
            android:paddingRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img1"
                android:src="@drawable/bbs_icon"
                android:tint="@color/grey"
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img2"
                android:src="@drawable/surat_icon"
                android:tint="@color/grey"
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_35" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:paddingLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginBottom="@dimen/space_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img3"
                android:src="@drawable/dispo_icon"
                android:tint="@color/grey"
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>