<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/enterprise_background">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparant_pure"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10">

        <ImageView
            android:id="@+id/circleView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_140"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/space_25"
            android:src="@drawable/logo_bp_batam" />

        <ui.CustomtextView
            font:name="GOTHAM_MEDIUM"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/lupa_password"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:typeface="serif"
            android:layout_below="@+id/btn_login"
            android:layout_alignLeft="@+id/btn_login"
            android:layout_alignStart="@+id/btn_login"
            android:textStyle="italic" />

        <ui.CustomEditText
            font:name="Label"
            font:type = "bold"
            android:drawableLeft="@drawable/gns_user"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14"
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_shape"
            android:clickable="false"
            android:ems="10"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:hint="Username"
            android:layout_below="@+id/circleView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_30" />

        <ui.CustomEditText
            font:name="Label"
            font:type = "bold"
            android:textSize="@dimen/space_14"
            android:drawableLeft="@drawable/gns_lock"
            android:textColor="@color/black"
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edt_username"
            android:background="@drawable/edittext_shape"
            android:ems="10"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:password="true"
            android:singleLine="true"
            android:layout_marginTop="@dimen/space_10"
            android:layout_alignRight="@+id/edt_username"
            android:layout_alignEnd="@+id/edt_username"
            android:layout_alignLeft="@+id/edt_username"
            android:layout_alignStart="@+id/edt_username" />

        <ui.CustomButton
            font:name="Label"
            font:type = "bold"
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/button_login"
            android:textAllCaps="false"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:layout_below="@+id/edt_password"
            android:layout_alignLeft="@+id/edt_password"
            android:layout_alignStart="@+id/edt_password"
            android:layout_alignRight="@+id/edt_password"
            android:layout_alignEnd="@+id/edt_password"
            android:layout_marginTop="@dimen/space_10" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ui.CustomtextView
            font:name="GOTHAM_MEDIUM"
            android:text="EP BATAM"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/blue2"
            android:gravity="right|fill_vertical"
            android:layout_marginRight="@dimen/space_2"
            android:textStyle="italic" />

        <ui.CustomtextView
            font:name="GOTHAM_LIGHT"
            android:text="mobile app"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/blue2"
            android:gravity="fill_vertical"
            android:layout_marginLeft="1dp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>