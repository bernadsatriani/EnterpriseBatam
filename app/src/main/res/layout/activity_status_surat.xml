<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ui.CustomtextView

        android:layout_marginTop="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_14"
        font:name = "GOTHAM_BOLD"
        android:textSize="@dimen/space_20"
        android:text="Status Surat"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ui.CustomtextView
        android:id="@+id/text_pribadi"
        android:layout_marginTop="@dimen/space_18"
        android:layout_marginLeft="@dimen/space_20"
        font:name = "GOTHAM_BOLD"
        android:textSize="@dimen/space_16"
        android:text="Dalam Proses"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ui.CustomtextView
        android:id="@+id/text_umum"
        android:layout_marginTop="@dimen/space_18"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_25"
        font:name = "GOTHAM_BOLD"
        android:textSize="@dimen/space_16"
        android:text="Dikembalikan"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_ok"
        android:background="@color/colorBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <ui.CustomtextView
            font:name = "GOTHAM_BOLD"
            android:textSize="@dimen/space_18"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</LinearLayout>