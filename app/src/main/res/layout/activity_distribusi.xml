<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@color/navigationDrawerBackgroundDetail">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" >
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navigationDrawerBackgroundDetail">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:background="@color/white"
            android:layout_above="@+id/btnDistribusi">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_margin="@dimen/space_5">

                <ui.CustomtextView
                    font:name="GOTHAM_BOLD"
                    android:text="Distribusi ke"
                    android:textColor="@color/white"
                    android:background="@color/blu3"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/text_distribusi"
                    android:background="@drawable/btn_shape_kotak_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_margin="@dimen/space_5">

                <ui.CustomtextView
                    font:name="GOTHAM_BOLD"
                    android:text="CC"
                    android:textColor="@color/white"
                    android:background="@color/blu3"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:paddingLeft="@dimen/space_10" />

                <EditText
                    android:id="@+id/text_cc"
                    android:background="@drawable/btn_shape_kotak_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_10" />
            </LinearLayout>

            <EditText
                android:id="@+id/text_pesan"
                android:background="@drawable/btn_shape_kotak_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_5"
                android:hint="insert text here..."
                android:gravity="top" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/Green"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/pdfView"
            android:layout_alignEnd="@+id/pdfView"
            android:id="@+id/btnDistribusi">

            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:text="KIRIM"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|fill_vertical"
                android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/right"
                    android:layout_width="@dimen/space_25"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>