<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ui.CircleImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_bp_batam"
            android:layout_margin="@dimen/space_5" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5">

                <ui.CustomtextView
                    font:name="Avenir_Heavy"
                    font:type ="bold"
                    android:id="@+id/text_Name"
                    android:textColor="@color/blu3"
                    android:text="Bpk Budi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ui.CustomtextView
                    font:name="Label"
                    android:id="@+id/textView"
                    android:gravity="right"
                    android:text="10:49 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/space_5" />

                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:id="@+id/imageView13"
                    android:src="@drawable/gns_clock"
                    android:layout_alignBottom="@+id/text_Name"
                    android:layout_toLeftOf="@+id/textView"
                    android:layout_toStartOf="@+id/textView" />

            </RelativeLayout>

            <ui.CustomtextView
                font:name="Label"
                android:textColor="@color/black"
                android:id="@+id/text_Date"
                android:text="Senin, 29 Agustus 2016, pukul 02:02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RelativeLayout
                android:id="@+id/layout_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_s"
                android:layout_below="@+id/text_Date"
                android:layout_alignRight="@+id/text_time"
                android:layout_alignEnd="@+id/text_time"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5">

                <ui.CustomtextView
                    font:name="Label"
                    android:id="@+id/lbl_attach"
                    android:text="Attachemnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <ui.CustomtextView
                    font:name="Avenir_LightOblique"
                    android:id="@+id/lbl_size"
                    android:text="Attachemnt asdas asdas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_attach"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <ImageView
                    android:layout_width="@dimen/space_40"
                    android:layout_height="@dimen/space_40"
                    android:id="@+id/imageView6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/document_black"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_35">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/btnDownload"
                    android:layout_toStartOf="@+id/btnDownload">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_indicator"
                            android:src="@drawable/ball_red"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="match_parent" />

                        <ui.CustomtextView
                            android:id="@+id/text_status"
                            android:textSize="@dimen/space_9"
                            android:text="Penting"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img_indicator"
                            android:layout_toEndOf="@+id/img_indicator"
                            android:gravity="center" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_print"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_print"
                            android:src="@drawable/print"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/space_2" />

                        <ui.CustomtextView
                            android:textSize="@dimen/space_9"
                            android:text="Print"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img_print"
                            android:layout_toEndOf="@+id/img_print"
                            android:gravity="center" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_komentar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_chat"
                            android:src="@drawable/chat"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="match_parent" />

                        <ui.CustomtextView
                            android:text="Komentar"
                            android:textSize="@dimen/space_9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img_chat"
                            android:layout_toEndOf="@+id/img_chat"
                            android:gravity="center" />
                    </RelativeLayout>
                </LinearLayout>

                <ui.CustomtextView
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_shape"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="DOWNLOAD"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/space_12"
                    font:name="Label"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_10" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>