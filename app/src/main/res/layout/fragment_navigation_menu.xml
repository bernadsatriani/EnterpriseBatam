<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@color/navigationDrawerBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout"
        android:background="@color/navigationDrawerBackgroundDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:layout_alignTop="@+id/circleView"
            android:layout_toRightOf="@+id/circleView"
            android:layout_toEndOf="@+id/circleView"
            android:layout_alignBottom="@+id/circleView">

            <ui.CustomtextView
                font:name= "Header"
                font:type = "bold"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Setia Nugraha"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/space_10" />

            <ui.CustomtextView
                font:name= "Content"
                font:type = "bold"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="nugraha.setia@gmail.com"
                android:textSize="14sp"
                android:textStyle="normal" />


        </LinearLayout>

        <ui.CircleImageView
            android:id="@+id/circleView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/logo_bp_batam" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grey_xxl"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <ui.CustomtextView
        font:name = "Header_Reguler"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVVersion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_10" />

    <ui.CustomtextView
        font:name= "Header_Reguler"
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tVVersion"
        android:layout_marginRight="@dimen/space_10" />


    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_above="@+id/tVVersion"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_5"
        android:groupIndicator="@android:color/transparent"
        android:cacheColorHint="#00000000"/>

</RelativeLayout>