<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorTabBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_55">

        <RelativeLayout
            android:id="@+id/layout_folder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ui.CustomtextView
                android:visibility="gone"
                android:id="@+id/notif1"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_notification_overlay"
                android:layout_marginRight="@dimen/space_30"
                android:text="27"
                android:textColor="#FFF"
                android:textSize="8sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_folder"
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/folder_icon"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_folder" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_folder"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="My Folder"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:background="@color/colorLineBar"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/layout_dikembalikan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_draft"
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/draft"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_dikembalikan" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_dikembalikan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Draft"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:background="@color/colorLineBar"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/layout_permohonan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ui.CustomtextView
                android:visibility="gone"
                android:id="@+id/notif3"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_notification_overlay"
                android:layout_marginRight="@dimen/space_30"
                android:text="27"
                android:textColor="#FFF"
                android:textSize="8sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/img_permohonan"
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/permohonan_icon"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_permohonan" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_permohonan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Permohonan"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:background="@color/colorLineBar"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/layout_simpan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ui.CustomtextView
                android:visibility="gone"
                android:id="@+id/notif4"
                android:gravity="center"
                android:layout_marginTop="@dimen/space_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_notification_overlay"
                android:layout_marginRight="@dimen/space_30"
                android:text="27"
                android:textColor="#FFF"
                android:textSize="8sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_surat"
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/status_surat"
                android:layout_width="@dimen/space_10"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/text_simpan" />
            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_simpan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_5"
                android:textSize="@dimen/space_10"
                android:text="Status Surat"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:id="@+id/line4"
                android:background="@color/colorBar"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:visibility="visible"
                android:id="@+id/line5"
                android:background="@color/colorBar"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:visibility="visible"
                android:id="@+id/line6"
                android:background="@color/colorBar"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:visibility="visible"
                android:id="@+id/line7"
                android:background="@color/colorBar"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:id="@+id/frame_content1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>