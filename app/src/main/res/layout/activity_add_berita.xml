<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorSecondaryBackground"
    android:layout_height="match_parent">

    <include
        layout="@layout/tool_bar_back_edit_bbs"
        android:id="@+id/tool_bar"
        />

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_14"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ui.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_marginTop="@dimen/space_14"
            android:layout_marginLeft="@dimen/size_30"
            android:src="@drawable/logo_bp_batam"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_100" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50">
            <View
                android:background="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ui.CustomtextView
                        font:name = "GOTHAM_BOLD"
                        android:id="@+id/text_kategori"
                        android:layout_marginLeft="@dimen/space_14"
                        android:gravity="fill_vertical"
                        android:text="Kategori Berita"
                        android:textColor="@color/colorBlackEP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:id="@+id/layout_lampiran"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ui.CustomtextView
                        font:name = "GOTHAM_BOLD"
                        android:gravity="fill_vertical|right"
                        android:text="Unggah Lampiran"
                        android:textColor="@color/colorReject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/imageView11"
                        android:layout_toStartOf="@+id/imageView11" />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/space_7"
                        android:src="@drawable/pdf"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView11" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <ui.CustomEditText
            android:id="@+id/text_judul"
            android:layout_marginTop="@dimen/space_14"
            font:name = "GOTHAM_BLACK"
            android:background="@color/transparant_pure"
            android:textSize="@dimen/space_16"
            android:layout_marginLeft="@dimen/size_30"
            android:textColor="@color/black"
            android:text="Judul Text"
            android:hint="Judul Text"
            android:textColorHint="@color/grey_xl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ui.CustomtextView
            android:layout_marginTop="14dp"
            font:name = "GOTHAM_BLACK"
            android:textSize="@dimen/space_16"
            android:layout_marginLeft="@dimen/space_30"
            android:textColor="@color/colorSearch"
            android:text="John Doe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/text_Name"
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_toEndOf="@+id/img_avatar" />

        <RelativeLayout
            android:layout_marginTop="@dimen/space_14"
            android:textSize="@dimen/space_10"
            android:id="@+id/layout_btn_status"
            android:background="@drawable/btn_shape_all_transparant_blue_spinner"
            android:layout_width="@dimen/space_150"
            android:layout_height="@dimen/space_35"
            android:layout_weight="2"
            android:text="Lampirkan File"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_below="@+id/text_Name"
            android:layout_alignLeft="@+id/text_Name"
            android:layout_alignStart="@+id/text_Name">

            <ImageView
                android:layout_marginLeft="@dimen/space_10"
                android:src="@drawable/ball_red"
                android:layout_width="@dimen/space_18"
                android:layout_height="match_parent"
                android:id="@+id/img_prioriti" />

            <ui.CustomtextView
                font:name = "GOTHAM_BOLD"
                android:id="@+id/text_prioriti"
                android:textColor="@color/black"
                android:gravity="fill_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:text="Tinggi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_prioriti"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/space_10"
                android:src="@drawable/arrow_down"
                android:layout_width="@dimen/space_18"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/space_14"
                android:id="@+id/imageView13" />

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_judul"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ui.CustomEditText
            android:id="@+id/text_header"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="10dp"
            android:background="@color/transparant_pure"
            font:name = "GOTHAM_BOOK"
            android:textSize="@dimen/space_14"
            android:layout_below="@+id/line1"
            android:hint="Tulis berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/layout_attachment1"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_header"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_marginTop="@dimen/space_14"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/size_30"
            android:id="@+id/layout_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorListItem"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ui.CustomtextView
                font:name="GOTHAM_BOLD"
                android:id="@+id/lbl_attach1"
                android:textSize="@dimen/space_12"
                android:text="Attachments :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@+id/lbl_Isi"
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginLeft="@dimen/space_7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ui.CustomtextView
                font:name="GOTHAM_LIGHTITALIC"
                android:id="@+id/lbl_attach"
                android:textSize="@dimen/space_12"
                android:text="Attachemnt asdas asdas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6" />

            <ui.CustomtextView
                font:name="GOTHAM_LIGHTITALIC"
                android:id="@+id/lbl_size"
                android:textSize="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_5"
                android:text="Attachemnt asdas asdas asd asd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:maxLines="1"
                android:layout_below="@+id/lbl_attach"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="@dimen/space_3"/>

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_30"
                android:id="@+id/imageView6"
                android:layout_below="@+id/lbl_attach1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/space_7"
                android:layout_marginLeft="@dimen/space_7"
                android:layout_marginBottom="@dimen/space_7"
                android:src="@drawable/pdf" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:src="@drawable/delete_x"
            android:layout_marginRight="@dimen/space_16"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />
    </RelativeLayout>


    </RelativeLayout>

</LinearLayout>